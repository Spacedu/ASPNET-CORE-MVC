@using System.IO;
@using System.Text.Encodings.Web;
@{
	var htmlContent = await Html.PartialAsync("~/Views/Shared/_Header.cshtml");

	string html;
	using(var sw = new StringWriter())
	{
		htmlContent.WriteTo(sw, HtmlEncoder.Default);
		html = sw.ToString();

		html = html.Replace(" > ", " : ");
	}
}
<!DOCTYPE html>
<html>
<head>
	<title>@ViewBag.Title</title>
	<!--CSS, JS, Meta-->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
</head>
<body>
	<div class="container-fluid" style="padding: 0px;">
		@Html.Raw(html)
		@await Html.PartialAsync("~/Views/Shared/_Header.cshtml")
		@{
			await Html.RenderPartialAsync("~/Views/Shared/_Header.cshtml");
		}
		<div>
			<div class="row" style="background-color: #FFDAB9; padding: 12px;">
				<div class="col-8">
					@RenderBody()
				</div>
				<div class="col-4">
					@RenderSection("ads", required: false)
				</div>
			</div>
		</div>
		<!-- ASP.NET MVC - Enable Tag Helper -->
		<partial name="~/Views/Shared/_Footer.cshtml" />
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js" integrity="sha384-k6d4wzSIapyDyv1kpU366/PK5hCdSbCRGRCMv+eplOQJWyd1fbcAu9OCUj5zNLiq" crossorigin="anonymous"></script>
	@RenderSection("scripts", required: false)
</body>
</html>